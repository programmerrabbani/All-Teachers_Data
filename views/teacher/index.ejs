





<div class="container my-5 teachers-table">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <a href="/teacher/create" class="btn btn-sm btn-primary">Add New Teacher</a>
            <br>
            <br>
            <div class="card shadow">
                <div class="card-header">
                    <h2 class="text-center">All Teachers Data</h2>
                </div>
                <div class="card-body">
                    <table class="table table-striped osthir-table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Cell</th>
                                <th>Location</th>
                                <th>Photo</th>
                                <th>video</th>
                                <th>Audio</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            <% teachers.forEach((teacher , index) => { %>
                             
                                <tr class="align-middle">
                                    <td><%= index + 1 %> </td>
                                    <td><%= teacher.name %> </td>
                                    <td><%= teacher.email %></td>
                                    <td><%= teacher.cell %></td>
                                    <td><%= teacher.location %></td>
                                    <td>

                                        <% if (teacher.photo == "avatar.png") { %>
                                         
                                            <img src="/images/<%= teacher.photo %>" alt="">

                                            <% } else { %>

                                             <img src="/images/teachers/<%= teacher.photo %>" alt="">

                                        <% } %>

                                    </td>
                                    <td>

                                        <% if (teacher.photo == "avatar.png") { %>
                                         
                                            <video controls><source src="/videos/<%= teacher.video %>">
                                        </video>

                                            <% } else { %>

                                             <video controls><source src="/videos/teachers/<%= teacher.video %>">
                                        </video>

                                        <% } %>

                                    </td>
                                    <td>

                                        <% if (teacher.photo == "avatar.png") { %>
                                         
                                            <audio controls><source src="/audios/<%= teacher.audio %>"></audio>

                                            <% } else { %>

                                             <audio controls><source src="/audios/teachers<%= teacher.audio %>"></audio>

                                        <% } %>

                                    </td>
                                    <td>
                                        <a href="#" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></a>
                                        <a href="#" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                        <a href="#" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>

                            <% }) %>


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>